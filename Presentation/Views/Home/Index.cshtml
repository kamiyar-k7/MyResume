        <div class="contact-content">
            <!--Contact form-->
            <div class="contact-form">

                <form action="/Home/Index?scrollToContact=true" id="myForm" method="post">
                    <div class="input-line">
                        <input id="name" type="text" placeholder="Name" class="input-name"  asp-for="ContactViewMdodel.SenderName" >
                        <input id="email" type="email" placeholder="Email" class="input-name" asp-for="ContactViewMdodel.SenderEmail" >
                    </div>
                    <input type="text" id="subject" placeholder="Subject" class="input-subject"  asp-for="ContactViewMdodel.Subject" >
                    <textarea id="body" class="input-textarea" placeholder="Message"  asp-for="ContactViewMdodel.Message" ></textarea>
                    <button type="submit" id="submit">Submit</button>
                    @Html.AntiForgeryToken() 
                </form>

                @if (TempData.ContainsKey("SuccessMessage"))
                {
                    <div class="alert alert-success">
                        @TempData["SuccessMessage"]
                    </div>
                }
                @if (TempData.ContainsKey("ErrorMessage"))
                {
                    <div class="alert alert-danger">
                        @TempData["ErrorMessage"]
                    </div>
                }


            </div>

            <!--Contact form-->
