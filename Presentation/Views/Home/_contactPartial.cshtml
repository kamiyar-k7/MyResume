@model Application.DTOs.ContactDtos;

<form action="/Home/Index?scrollToContact=true" id="myForm"  method="post">
    <div class="input-line">
        <input id="name" type="text" placeholder="Name" class="input-name" asp-for="SenderName">
        <input id="email" type="email" placeholder="Email" class="input-name" asp-for="SenderEmail">
    </div>
    <input type="text" id="subject" placeholder="Subject" class="input-subject" asp-for="Subject">
    <textarea id="body" class="input-textarea" placeholder="Message" asp-for="Message"></textarea>
    <button type="submit" id="submit">Submit</button>
    @Html.AntiForgeryToken() <!-- Ensure anti-forgery token is included -->
</form>



@if (TempData.ContainsKey("SuccessMessage"))
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}
@if (TempData.ContainsKey("ErrorMessage"))
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<style>


.alert-success {
    color: #155724;  /* Green color */
    background-color: black;  /* Light green background */
    border-color: black;  /* Green border */
}

.alert-danger {
    color: #721c24;  /* Red color */
    background-color: black ; /* Light red background */
    border-color: black;  /* Red border */
}
</style>
