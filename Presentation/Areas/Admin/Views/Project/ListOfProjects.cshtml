@model List<Application.ViewModel.ProjectViewModel>

<div class="content">

    <!--nav bar-->
    <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
        <a class="navbar-brand d-flex d-lg-none me-4">
            <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
        </a>
        <a href="#" class="sidebar-toggler flex-shrink-0">
            <i class="fa fa-bars"></i>
        </a>

    </nav>
    <!--nav bar end -->

    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">

            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Serivce Table</h6>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Project ID</th>
                            <th scope="col">Project Name</th>
                            <th scope="col">Project Description</th>
                            <th scope="col">Project Picture</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.Id</th>
                                <td>@item.Title</td>
                                <td>@item.Description</td>
                                <td>
                                    @if (string.IsNullOrEmpty(item.PictureUrl))
                                    {
                                        <img id="preview" src="~/images/coding.png" alt="Image Preview" style="max-width: 30%; max-height: 300px; ">
                                    }
                                    else
                                    {
                                        <img id="preview" src="~/images/ProjectImages/@item.PictureUrl" alt="Image Preview" style="max-width: 30%; max-height: 300px; ">
                                    }
                                </td>
                                <td>
                                    <a type="button"
                                       asp-area="Admin"
                                       asp-controller="Project"
                                       asp-action="EditProject"
                                       asp-route-Id="@item.Id"
                                       class="btn btn-warning m-2">
                                        Edit
                                    </a>
                                </td>
                                <td>

                                    <a type="button" asp-area="Admin" asp-controller="Project" asp-action="DeleteProject" asp-route-Id="@item.Id" class="btn btn-danger m-2" onclick="return confirm('Are you sure you want to delete this Project? This action cannot be undone.')">
                                        Delete
                                    </a>


                                </td>

                            </tr>
                        }

                    </tbody>

                </table>
            </div>


        </div>
    </div>
</div>