@model List<Application.ViewModel.SkillViewModel>;



<div class="content">

    <!--nav bar-->
    <nav class="navbar navbar-expand bg-secondary navbar-dark sticky-top px-4 py-0">
        <a   class="navbar-brand d-flex d-lg-none me-4">
            <h2 class="text-primary mb-0"><i class="fa fa-user-edit"></i></h2>
        </a>
        <a href="#" class="sidebar-toggler flex-shrink-0">
            <i class="fa fa-bars"></i>
        </a>

    </nav>
    <!--nav bar end -->

    <div class="container-fluid pt-4 px-4">
        <div class="row g-4">

            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Hoverable Table</h6>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">SkillId</th>
                            <th scope="col">Skill Name</th>
                            <th scope="col">Skill Value</th>

                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <th scope="row">@item.SkillId</th>
                                <td>@item.SkillName</td>
                                <td>@item.SkillValue</td>
                                <td>
                                    <a type="button"
                                       asp-area="Admin"
                                       asp-controller="MySkills"
                                       asp-action="EditMySkills"
                                       asp-route-SkillId="@item.SkillId"
                                       class="btn btn-warning m-2">
                                        Edit
                                    </a>
                                </td>
                                <td>

                                    <a type="button" asp-area="Admin" asp-controller="MySkills" asp-action="DeleteSkill" asp-route-SkillId="@item.SkillId" class="btn btn-danger m-2" onclick="return confirm('Are you sure you want to delete this skill? This action cannot be undone.')">
                                        Delete
                                    </a>


                                </td>

                            </tr>
                        }

                    </tbody>

                </table>
            </div>


        </div>
    </div>
</div>
